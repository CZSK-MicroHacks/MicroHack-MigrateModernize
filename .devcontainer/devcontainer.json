{
  "name": "MicroHack - Migrate & Modernize",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true",
      "installGradle": "false",
      "additionalVersions": "8"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "vscjava.migrate-java-to-azure",
        "ms-dotnettools.vscode-dotnet-modernize",
        "vscjava.vscode-java-pack",
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/local/sdkman/candidates/java/21.0",
            "default": true
          },
          {
            "name": "JavaSE-1.8",
            "path": "/usr/local/sdkman/candidates/java/8.0"
          }
        ]
      }
    }
  },
  "postCreateCommand": "echo 'Development environment ready! JDK 21 (default) and JDK 8 available. Use sdk use java <version> to switch.'"
}
